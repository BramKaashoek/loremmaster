{
  "compilerOptions": {
    "allowJs": false,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "es2017"],
    "target": "es2015",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
